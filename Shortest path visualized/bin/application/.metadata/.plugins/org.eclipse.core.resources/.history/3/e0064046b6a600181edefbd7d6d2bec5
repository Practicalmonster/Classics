package proj;

import java.util.HashMap;

public class Main{
	public static int[] sol;
	
	public static boolean solve(int [] type ,int changes , int money) {
		if(changes == money)
		{
			for(int i= 0 ; i < sol.length ; i++) {
				System.out.print(sol[i]);
			}
			System.out.println(" ");
			return true;
		}else {
			for(int i = 0 ; i < type.length ; i++) {
				sol[type[i]]+=1;
				if(changes + type[i] <= money)
					{
					solve(type, changes + type[i] , money)
					}
				sol[type[i]]-=1;
			}
		}
		return false;
	}
	
	
	public static void main(String[] args) {
		int n=  50;
		int[] types = {1,5,4};
		sol = new int[300];
		solve(types , 0 , n);
	}
}

